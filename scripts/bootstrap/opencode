#!/bin/bash
# üêä Jacazul - Bootstrap for Opencode (Global UNHINGED Mode)
# Sets up global agents and skills for native Gemini CLI execution.

PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/../.." && pwd)"
OPENCODE_GLOBAL_DIR="$HOME/.config/opencode"
TEMPLATES_DIR="$PROJECT_ROOT/templates"

# 1. Garante que os diret√≥rios globais existem
if [ ! -d "$OPENCODE_GLOBAL_DIR/agents" ] || [ ! -d "$OPENCODE_GLOBAL_DIR/skills" ]; then
    echo "üêä Initializing global Opencode directories at $OPENCODE_GLOBAL_DIR..."
    mkdir -p "$OPENCODE_GLOBAL_DIR/agents" "$OPENCODE_GLOBAL_DIR/skills"
fi

# 2. Link Global Agents (Surgical)
# Link Gemini-specific version as the default 'jacazul.agent.md'
AGENT_SRC="$TEMPLATES_DIR/agents/jacazul.gemini.md"
AGENT_TARGET="$OPENCODE_GLOBAL_DIR/agents/jacazul.agent.md"

if [ -e "$AGENT_SRC" ]; then
    echo "üêä Linking global Gemini agent: jacazul"
    ln -sf "$AGENT_SRC" "$AGENT_TARGET"
fi

# 3. Link Global Skills (Surgical)
for skill_dir in "$TEMPLATES_DIR/skills"/*; do
    [ -d "$skill_dir" ] || continue
    name=$(basename "$skill_dir")
    
    # üö® EXCLUSION: jacazul is NOT a skill for Opencode, it is an agent.
    if [ "$name" = "jacazul" ]; then
        continue
    fi

    target="$OPENCODE_GLOBAL_DIR/skills/$name"
    if [ ! -L "$target" ] && [ ! -d "$target" ]; then
        echo "üêä Linking global skill: $name"
        ln -sf "$skill_dir" "$target"
    fi
done

# Log only in DEBUG mode
if [ -n "$DEBUG" ]; then
    echo "‚úÖ Jacazul: Global Opencode environment verified."
fi
